<mvc:View controllerName="pokedexPokedex.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:smartList="sap.ui.comp.smartlist" displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:suite="sap.suite.ui.commons">
    <SplitApp id="SplitApp" initialDetail="detail" initialMaster="master">
        <masterPages>
            <Page id="master" title="Pokémons" class="sapUiStdPage" showNavButton="false">
                <subHeader>
                    <OverflowToolbar>
                        <SearchField liveChange="onSearch" width="100%" />
                    </OverflowToolbar>
                </subHeader>
                <List id="pokemonList" headerText="Pokémons" growing="true" growingScrollToLoad="true" items="{path:'modelPokemonList>/results'}">
                    <items>
                        <StandardListItem id="pokemonListItem" title="{modelPokemonList>name}" info="{path:'modelPokemonList>url', formatter:'.formatter.number'}" type="Navigation" press=".onPokemonPress"/>
                    </items>
                </List>
            </Page>
        </masterPages>
        <detailPages>
            <Page id="detail" title="{path:'modelPokemon>/name', formatter:'.formatter.uppercase'}" class="sapUiStdPage">
                <l:HorizontalLayout class="sapUiContentPadding">
                    <Image class="sapUiSmallMarginTop sapUiSmallMarginBottom" src="{modelPokemon>/sprites/other/dream_world/front_default}" height = "150px"/>
                    <form:SimpleForm editable="false" layout="ResponsiveGridLayout" singleContainerFullSize="true">
                        <form:content>
                            <Label text="ID"/>
                            <Text text="{modelPokemon>/id}"/>
                            <Label text="Height" />
                            <Text text="{modelPokemon>/height}" />
                            <Label text="Weight" />
                            <Text text="{modelPokemon>/weight}" />
                            <Label text="Type" />
                            <Text text="{modelPokemon>/types/0/type/name} {modelPokemon>/types/1/type/name}" />
                        </form:content>
                    </form:SimpleForm>
                </l:HorizontalLayout>
                <IconTabBar id="idIconTabBarSeparatorNoIcon" expanded="false" class="sapUiResponsiveContentPadding" select="handleIconTabBarSelect">
                    <items>
                        <IconTabFilter key="stats" icon="sap-icon://hint" iconColor="Positive">
                            <VBox>
                                <form:Form id="stats" editable="false">
                                    <form:layout>
                                        <!--<form:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4"-->
                                        <!-- emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>-->
                                        <form:ResponsiveGridLayout />
                                    </form:layout>
                                    <form:formContainers>
                                        <form:FormContainer>
                                            <form:formElements>
                                                <form:FormElement label="HP">
                                                    <form:fields>
                                                        <ProgressIndicator percentValue="{path:'modelPokemon>/stats/0/base_stat', formatter:'.formatter.percentage'}" displayValue="{modelPokemon>/stats/0/base_stat}" showValue="true" state="{path:'modelPokemon>/stats/0/base_stat', formatter:'.formatter.color'}" displayOnly="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement label="Attack">
                                                    <form:fields>
                                                        <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{path:'modelPokemon>/stats/1/base_stat', formatter:'.formatter.percentage'}" displayValue="{modelPokemon>/stats/1/base_stat}" showValue="true" state="{path:'modelPokemon>/stats/1/base_stat', formatter:'.formatter.color'}" displayOnly="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement label="Defense">
                                                    <form:fields>
                                                        <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{path:'modelPokemon>/stats/2/base_stat', formatter:'.formatter.percentage'}" displayValue="{modelPokemon>/stats/2/base_stat}" showValue="true" state="{path:'modelPokemon>/stats/2/base_stat', formatter:'.formatter.color'}" displayOnly="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement label="Attack Spe.">
                                                    <form:fields>
                                                        <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{path:'modelPokemon>/stats/3/base_stat', formatter:'.formatter.percentage'}" displayValue="{modelPokemon>/stats/3/base_stat}" showValue="true" state="{path:'modelPokemon>/stats/3/base_stat', formatter:'.formatter.color'}" displayOnly="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement label="Defense Spe.">
                                                    <form:fields>
                                                        <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{path:'modelPokemon>/stats/4/base_stat', formatter:'.formatter.percentage'}" displayValue="{modelPokemon>/stats/4/base_stat}" showValue="true" state="{path:'modelPokemon>/stats/4/base_stat', formatter:'.formatter.color'}" displayOnly="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement label="Speed">
                                                    <form:fields>
                                                        <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{path:'modelPokemon>/stats/5/base_stat', formatter:'.formatter.percentage'}" displayValue="{modelPokemon>/stats/5/base_stat}" showValue="true" state="{path:'modelPokemon>/stats/5/base_stat', formatter:'.formatter.color'}" displayOnly="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                            </form:formElements>
                                        </form:FormContainer>
                                    </form:formContainers>
                                </form:Form>
                            </VBox>
                        </IconTabFilter>
                        <IconTabSeparator icon=""/>
                        <IconTabFilter key="moves" icon="sap-icon://activity-items" iconColor="Neutral">
                            <Table id="Moves" inset="false" items="{path:'modelPokemon>/moves'}">
                                <columns>
                                    <Column width="20%">
                                        <Text text="Moves"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active" press="onMovePress" bindingContexts="">
                                        <cells>
                                            <ObjectIdentifier title="{modelPokemon>move/name}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>
                        <IconTabSeparator icon=""/>
                        <IconTabFilter key="evolution" icon="sap-icon://step" iconColor="Contrast">
                            <HBox id="evolutionChain"></HBox>
                            <suite:ProcessFlow id="processflow" nodePress="onNodePress" scrollable="false" nodes="{path: 'modelEvolutionChain>/nodes'}" lanes="{path: 'modelEvolutionChain>/lanes'}">
                                <suite:nodes>
                                    <suite:ProcessFlowNode laneId="{modelEvolutionChain>lane}" nodeId="{modelEvolutionChain>id}" children="{modelEvolutionChain>children}" focused="{modelEvolutionChain>focused}">
                                        <suite:zoomLevelOneContent>
                                            <VBox height="100%" justifyContent="SpaceBetween" renderType="Bare" alignItems= "Center">
                                                <Text text="{path:'modelEvolutionChain>name', formatter:'.formatter.uppercase'}" />
                                                <Image height="9rem" src="{modelEvolutionChain>sprites/front_default}" alt="{modelEvolutionChain>name}" densityAware="false" />
                                            </VBox>
                                        </suite:zoomLevelOneContent>
                                        <suite:zoomLevelTwoContent>
                                            <VBox height="100%" justifyContent="SpaceBetween" renderType="Bare" alignItems= "Center">
                                                <Text text="{path:'modelEvolutionChain>name', formatter:'.formatter.uppercase'}" />
                                                <Image height="7rem" src="{modelEvolutionChain>sprites/front_default}" alt="{title}" densityAware="false" />
                                            </VBox>
                                        </suite:zoomLevelTwoContent>
                                        <suite:zoomLevelThreeContent>
                                            <VBox height="100%" justifyContent="SpaceBetween" renderType="Bare" alignItems= "Center">
                                                <Text text="{path:'modelEvolutionChain>name', formatter:'.formatter.uppercase'}" />
                                                <Image height="5rem" src="{modelEvolutionChain>sprites/front_default}" alt="{title}" densityAware="false" />
                                            </VBox>
                                        </suite:zoomLevelThreeContent>
                                        <suite:zoomLevelFourContent>
                                            <Text text="{path:'modelEvolutionChain>name', formatter:'.formatter.uppercase'}" />
                                            <Image height="100%" src="{modelEvolutionChain>sprites/front_default}" alt="{title}" densityAware="false" />
                                        </suite:zoomLevelFourContent>
                                    </suite:ProcessFlowNode>
                                </suite:nodes>
                                <suite:lanes>
                                    <suite:ProcessFlowLaneHeader laneId="{modelEvolutionChain>id}" iconSrc="{modelEvolutionChain>icon}" position="{modelEvolutionChain>position}" text="{modelEvolutionChain>text}" />
                                </suite:lanes>
                            </suite:ProcessFlow>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </Page>
        </detailPages>
    </SplitApp>
</mvc:View>