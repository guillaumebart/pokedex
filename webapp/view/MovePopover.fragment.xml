<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Popover id="myPopover" title="{modelMove>/name}" offsetX="50">
        <content>
            <form:SimpleForm editable="false" layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="Type"/>
                    <Text text="{modelMove>/type/name}" />
                    <Label text="Power"/>
                    <Text text="{modelMove>/power}" />
                    <Label text="PP"/>
                    <Text text="{modelMove>/pp}" />
                </form:content>
            </form:SimpleForm>
            <Text text="Description"/>
            <List id="moveDescription" items="{path:'modelMove>/effect_entries'}">
                <items>
                    <StandardListItem title="{modelMove>short_effect}"/>
                </items>
            </List>
        </content>
    </Popover>
</core:FragmentDefinition>